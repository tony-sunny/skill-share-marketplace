{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "lib": ["es2023"],
    "outDir": ".build",
    "strict": true,
    "declaration": true,
    "declarationDir": ".build/types",
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*"]
}
